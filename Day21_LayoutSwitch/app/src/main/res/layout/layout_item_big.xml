<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/round_layout"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/item_big_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:elevation="16dp"
        android:textSize="28sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/item_big_image_view"
        app:layout_constraintEnd_toEndOf="@id/item_big_image_view"
        app:layout_constraintBottom_toBottomOf="@id/item_big_image_view" />


    <ImageView
        android:id="@+id/item_big_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_big_like_text_view"
        android:src="@drawable/yun_ting_1"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/item_big_like_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="100 likes"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/item_big_comment_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="100 comments"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/item_big_like_text_view"
        app:layout_constraintBottom_toBottomOf="@id/item_big_like_text_view"
        app:layout_constraintStart_toStartOf="@id/item_big_image_view"
        app:layout_constraintEnd_toEndOf="@id/item_big_image_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>